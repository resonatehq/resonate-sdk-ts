{
  "name": "@resonatehq/sdk",
  "version": "0.6.3",
  "description": "TypeScript SDK for Resonate",
  "author": "Resonate Developers",
  "license": "Apache-2.0",
  "type": "commonjs",
  "main": "./dist/src/index.js",
  "types": "./dist/src/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/resonatehq/resonate-sdk-ts.git"
  },
  "publishConfig": {
    "provenance": true
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "test": "jest --config jest.config.js",
    "build": "tsc --build tsconfig.build.json",
    "prepare": "npm run build",
    "serve:web": "esbuild sim/browser.ts --bundle --format=esm --outfile=public/main.js && npx serve public",
    "fmt": "npx @biomejs/biome format ./ --write",
    "check": "npx @biomejs/biome check ./",
    "check:fix": "npx @biomejs/biome check ./ --write",
    "docs": "npx typedoc ./src --githubPages",
    "debug": "node --inspect-brk ./node_modules/.bin/jest -i",
    "type-check": "npx tsc --noEmit"
  },
  "dependencies": {
    "cron-parser": "^5.3.0",
    "eventsource": "^4.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@jest/globals": "^30.0.0",
    "@types/jest": "29.5.14",
    "@types/node": "^24.0.0",
    "esbuild": "^0.25.5",
    "ts-jest": "^29.3.4",
    "ts-node": "^10.9.2",
    "typedoc": "^0.28.0",
    "typedoc-material-theme": "^1.4.0",
    "typescript": "^5.8.3"
  },
  "engines": {
    "node": ">= 22"
  }
}
